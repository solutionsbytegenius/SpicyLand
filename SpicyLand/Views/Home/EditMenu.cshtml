@model IEnumerable<PaninoEntity>
@{
    ViewData["Title"] = "Modifica Menù";
}
<script>
    $(document).ready(function () {
        $('.open-modal').click(function () {
            var num = $(this).data('guid');
            console.log(num);
            $.get('/Home/ShowEditModal', { Scelta: num })
                .done(function (data) {
                    console.log(data);
                    console.log(data.Nome);
                    // Popoliamo dinamicamente il titolo e il corpo della modale con i dati ricevuti dalla richiesta AJAX
                    $('#modalTitle').text(data.Nome);
                    $('#modalBody').html(data);
                    $('#myModal').modal('show');
                })
                .fail(function (xhr, status, error) {
                    console.error("Errore durante il caricamento dei dati della modale:", error);
                });
        });
    });
</script>
<div class="Container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <center>
                <Titolo>Menù</Titolo>
            </center>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
<div class="PlaceHolderHere"></div>
<div class="container">
    <div class="row">
        <div class="table-responsive ">
            <table class="table table-striped table-light">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Descrizione</th>
                        <th>Prezzo (€)</th>
                        <th>Piatto del Mese</th>
                        <th>In Menù</th>
                        <th>Data di Creazione</th>
                        <th>
                            <button type="button" class="btn btn-success open-modal" data-bs-toggle="modal" data-bs-target="#ModalEdit" data-guid="Add">
                                <i class="bi bi-plus-circle"></i>
                            </button>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.Nome</td>
                            <td>@x.Descrizione</td>
                            <td>€ @x.Prezzo</td>
                            <td>
                                @if (x.PaninoMese == true)
                                {
                                    <p>Piatto del mese</p>
                                }
                                else
                                {
                                }
                            </td>
                            <td>
                                @if (x.InMenu == true)
                                {
                                    <p>In menù</p>
                                }
                                else
                                {
                                    <p>Non in menù</p>
                                }
                            </td>
                            <td>
                                @x.DataCreazione
                            </td>
                            <td>
                                <button type="button" class="btn btn-primary open-modal" data-bs-toggle="modal" data-bs-target="#ModalEdit" data-guid="@x.PaninoID">
                                    <i class="bi bi-pencil-square"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalEdit">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title" id="modalTitle"></h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" action="AddOrEditHamburger">
                <!-- Modal body -->
                <div class="modal-body" id="modalBody">
                    <!-- Il corpo della modale sarà popolato dinamicamente tramite AJAX -->
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Chiudi</button>
                    <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Salva</button>
                </div>
            </form>
        </div>
    </div>
</div>

