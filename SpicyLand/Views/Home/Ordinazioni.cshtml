@model OrdineCollection
@{
    ViewData["Title"] = "Ordinazioni";
}


<script>
    $(document).ready(function () {
        $('.open-modal').click(function () {
            var num = $(this).data('guid');
            console.log(num);
            $.get('/Home/ShowOrderModal', { Order: num })
                .done(function (data) {
                    console.log(data);
                    console.log(data.Nome);
                    // Popoliamo dinamicamente il titolo e il corpo della modale con i dati ricevuti dalla richiesta AJAX
                    $('#modalTitle').text(data.Nome);
                    $('#modalBody').html(data);
                    $('#myModal').modal('show');
                })
                .fail(function (xhr, status, error) {
                    console.error("Errore durante il caricamento dei dati della modale:", error);
                });
        });
        $('#Annulla').click(function () {
            $('#modalBody').append('<input type="hidden" name="Annulla" value="true">').submit();
        });

        $('#Consegna').click(function () {
            $('#modalBody').append('<input type="hidden" name="Consegna" value="true">').submit();
        });
    });
    
</script>


<div class="Container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <center>
                <Titolo>Ordinazioni</Titolo>
            </center>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
<div class="PlaceHolderHere"></div>
<div class="container">
    <div class="row">
        <div class="table-responsive ">
            <table class="table table-striped table-light">
                <thead>
                    <tr>
                        <th>Cliente</th>
                        <th>Ordine n°.</th>
                        <th>Ordine</th>
                        <th>Quantità</th>
                        <th>Note</th>
                        <th>Status</th>
                        <th>Azione</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.Cliente</td>
                                <td>@x.numOrdine</td>
                                <td>
                                    <h5>@x.Panino</h5>
                                    <p> @x.PlusPatatine</p>
                                    <p> @x.PlusBevanda</p>
                                </td>
                                <td>
                                    x @x.Quantita
                                </td>
                                <td>@x.Note</td>
                                <td>
                                    @if (x.Consegnato == true)
                                    {
                                        <p style="color:green;">Consegnato</p>
                                    }
                                    else
                                    {
                                        @if (x.Annullato == true)
                                        {
                                            <p style="color:red;">Annullato</p>
                                        }
                                        else
                                        {
                                            <p>In lavorazione...</p>
                                        }
                                    }
                                </td>
                                <td>
                                    @if ((x.Consegnato==false && x.Annullato==false))
                                    {
                                        <button type="Button" class="btn btn-primary open-modal" data-bs-toggle="modal" data-bs-target="#OrderDetail" data-guid="@x.numOrdine">
                                            <i class="bi bi-pencil-square"></i>
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="dt-empty"><center>Nessun ordinazione presente...</center></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- The Modal -->
<div class="modal fade" id="OrderDetail">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title" id="modalTitle"></h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" action="EditOrder">
                <!-- Modal body -->
                <div class="modal-body" id="modalBody">
                    <!-- Il corpo della modale sarà popolato dinamicamente tramite AJAX -->
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Chiudi</button>
                    <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Salva</button>
                </div>
            </form>
        </div>
    </div>
</div>

